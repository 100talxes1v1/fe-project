{
  "name": "boston-library-<%=libraryName%>",
  "version": "0.1.1",
  "description": "<%=description%>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bpm build",
    "deploy": "bpm publish",
    "lint:js": "eslint --ext .js,.ts --fix --format node_modules/eslint-friendly-formatter src test/unit"
  },
  "author": "<%=author%>",
  "devDependencies": {
    "@xes/dh-boston-package-manager": "^0.4.8"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.+(js|ts|json)": [
      "prettier --write"
    ],
    "*.+(js|ts)": [
      "npm run lint:js",
      "git add"
    ]
  }
}