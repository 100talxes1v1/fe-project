{
  "name": "boston-app-<%=appName%>",
  "version": "0.1.1",
  "description": "<%=description%>",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "bpm debug",
    "build": "bpm build",
    "deploy": "bpm publish",
    "lint": "eslint --ext .ts,.js,.html,.vue --fix --format node_modules/eslint-friendly-formatter src test/unit",
    "karma": "cross-env BABEL_ENV=test karma start ./test/karma.conf.js",
    "lint:js": "eslint --ext .js,.vue,.html,.ts --fix --format node_modules/eslint-friendly-formatter src test/unit",
    "lint:css": "stylelint src/**/*.vue,scss,css --fix"
  },
  "author": "<%=author%>",
  "dependencies": {
    "@xes/dh-boston-type": "^0.4.2",
    "element-ui": "^2.13.0",
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-router": "^3.1.5",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@xes/dh-boston-package-manager": "^0.4.8"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e $GIT_PARAMS"
  },
  "lint-staged": {
    "*.+(js|vue|html|ts|json)": [
      "prettier --write"
    ],
    "*.+(js|vue|html|ts)": [
      "npm run lint:js",
      "npm run lint:css",
      "git add"
    ]
  }
}