{
  "name": "vue3-app-template",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "lint:script": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "lint:style": "stylelint src/**/*.{css,scss,vue}"
  },
  "dependencies": {
    "tailwindcss": "^2.0.3",
    "vue": "^3.0.5",
    "vue-router": "^4.0.4",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@commitlint/cli": "^12.1.1",
    "@storybook/addon-actions": "^6.2.0-beta.12",
    "@storybook/addon-essentials": "^6.2.0-beta.12",
    "@storybook/addon-links": "^6.2.0-beta.12",
    "@storybook/vue3": "^6.2.0-beta.12",
    "@tailwindcss/postcss7-compat": "^2.0.3",
    "@types/node": "^14.14.33",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vitejs/plugin-vue-jsx": "^1.1.2",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vuedx/typescript-plugin-vue": "^0.6.3",
    "autoprefixer": "^10.2.5",
    "babel-loader": "^8.2.2",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "eslint": "^7.23.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.8",
    "postcss-loader": "^4",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sass-loader": "10",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-config-standard": "^21.0.0",
    "typescript": "^4.1.3",
    "vite": "^2.1.5",
    "vue-loader": "^16.1.2",
    "vue-tsc": "^0.0.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/*.{ts,tsx,vue}": "eslint --fix",
    "src/*.{css,scss,vue}": "stylelint --fix",
    "src/*": "prettier -w -u"
  }
}
